generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Kita gunakan sqlite dulu agar langsung jalan
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(cuid())
  email       String       @unique
  name        String?
  createdAt   DateTime     @default(now())
  invitations Invitation[]
}

model Invitation {
  id        String   @id @default(cuid())
  slug      String   @unique
  brideName String
  groomName String
  date      DateTime
  location  String
  musicUrl  String?
  themeName String   @default("default")
  
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  rsvps     RSVP[]
  guests    Guest[]
  views     InvitationView[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RSVP {
  id           String     @id @default(cuid())
  name         String
  status       String
  message      String?
  createdAt    DateTime   @default(now())
  
  invitationId String
  invitation   Invitation @relation(fields: [invitationId], references: [id])
}

model Guest {
  id            String     @id @default(cuid())
  name          String
  customMessage String?
  createdAt     DateTime   @default(now())
  
  invitationId  String
  invitation    Invitation @relation(fields: [invitationId], references: [id], onDelete: Cascade)
  views         InvitationView[]
  
  @@index([invitationId])
}

model InvitationView {
  id           String     @id @default(cuid())
  viewedAt     DateTime   @default(now())
  ipAddress    String?
  userAgent    String?
  
  invitationId String
  invitation   Invitation @relation(fields: [invitationId], references: [id], onDelete: Cascade)
  
  guestId      String?
  guest        Guest?     @relation(fields: [guestId], references: [id], onDelete: SetNull)
  
  @@index([invitationId])
  @@index([guestId])
}